<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <!--focusable.focusableInTouchMode取消editText自动获取焦点-->
    <!--toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/delegate_sign_in_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/toolbarColor">
        <!--隐藏back按钮-->
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/delegate_sign_in_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="@dimen/screenLRGap"
            android:layout_marginStart="@dimen/screenLRGap"
            android:text="@string/faw_chevron_left"
            android:textColor="@color/textColorLight"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:text="@string/sign_in"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/toolBarTextSize" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/screenLRGap">
            <!--登录头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/delegate_sign_in_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/screenLRGap"
                android:src="@mipmap/avatarman01"
                app:civ_border_color="@color/backgroundColor"
                app:civ_border_width="1dp" />
            <!--登录邮箱-->
            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/delegate_sign_in_email"
                android:layout_width="@dimen/normalIconSize"
                android:layout_height="@dimen/normalIconSize"
                android:layout_alignBottom="@id/delegate_sign_in_email_edit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dividerGap"
                android:layout_marginEnd="@dimen/screenLRGap"
                android:layout_marginRight="@dimen/screenLRGap"
                android:text="@string/faw_envelope"
                android:textColor="@color/textColorDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/delegate_sign_in_email_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/searchBarSize"
                android:layout_below="@id/delegate_sign_in_avatar"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dividerGap"
                android:layout_toEndOf="@id/delegate_sign_in_email"
                android:layout_toRightOf="@id/delegate_sign_in_email"
                android:hint="@string/hint_email"
                android:textSize="@dimen/buttonTextSize" />
            <!--登录密码-->
            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/delegate_sign_in_password"
                android:layout_width="@dimen/normalIconSize"
                android:layout_height="@dimen/normalIconSize"
                android:layout_alignBottom="@id/delegate_sign_in_password_edit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dividerGap"
                android:layout_marginEnd="@dimen/screenLRGap"
                android:layout_marginRight="@dimen/screenLRGap"
                android:text="@string/faw_unlock_alt"
                android:textColor="@color/textColorDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/delegate_sign_in_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/searchBarSize"
                android:layout_below="@id/delegate_sign_in_email_edit"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dividerGap"
                android:layout_toEndOf="@id/delegate_sign_in_password"
                android:layout_toRightOf="@id/delegate_sign_in_password"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textSize="@dimen/buttonTextSize" />

            <!--登录按钮-->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/delegate_sign_in_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/searchBarSize"
                android:layout_below="@id/delegate_sign_in_password_edit"
                android:layout_marginBottom="@dimen/elementGap"
                android:background="@color/normalButtonColor"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/buttonTextSize" />
            <!--忘记密码-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/delegate_sign_in_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/delegate_sign_in_btn"
                android:layout_marginBottom="@dimen/elementGap"
                android:text="@string/forget_password"
                android:textColor="@color/textHintColor"
                android:textSize="@dimen/textSmallSize" />
            <!--注册文字-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/delegate_sign_in_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/delegate_sign_in_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/elementGap"
                android:text="@string/sign_in_signUP"
                android:textColor="@color/textHintColor"
                android:textSize="@dimen/textSmallSize" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/delegate_sign_in_sign_up"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <!--微信登录-->
                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/delegate_sign_in_weChat"
                    android:layout_width="@dimen/normalIconSize"
                    android:layout_height="@dimen/normalIconSize"
                    android:layout_marginLeft="@dimen/dividerGap"
                    android:layout_marginRight="@dimen/dividerGap"
                    android:gravity="center"
                    android:text="@string/faw_weixin"
                    android:textColor="@color/textColorDark" />

                <!--qq登录-->
                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/delegate_sign_in_qq"
                    android:layout_width="@dimen/normalIconSize"
                    android:layout_height="@dimen/normalIconSize"
                    android:layout_marginLeft="@dimen/dividerGap"
                    android:layout_marginRight="@dimen/dividerGap"
                    android:gravity="center"
                    android:text="@string/faw_qq"
                    android:textColor="@color/textColorDark" />

                <!--微博登录-->
                <com.mikepenz.iconics.view.IconicsTextView
                    android:id="@+id/delegate_sign_in_weiBo"
                    android:layout_width="@dimen/normalIconSize"
                    android:layout_height="@dimen/normalIconSize"
                    android:layout_marginLeft="@dimen/dividerGap"
                    android:layout_marginRight="@dimen/dividerGap"
                    android:gravity="center"
                    android:text="@string/faw_weibo"
                    android:textColor="@color/textColorDark" />
            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>

    </ScrollView>


</android.support.v7.widget.LinearLayoutCompat>