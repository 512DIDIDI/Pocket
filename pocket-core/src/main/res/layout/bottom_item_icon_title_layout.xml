<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:rv_framerate="20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--底部图标-->
        <com.mikepenz.iconics.view.IconicsTextView
            android:id="@+id/bottom_item_icon"
            android:layout_width="@dimen/normalIconSize"
            android:layout_height="@dimen/normalIconSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bottomBarTopNormalGap"
            android:gravity="center"
            android:textColor="@color/textColorGray" />
        <!--底部文字-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bottom_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/bottomBarBottomGap"
            android:gravity="center"
            android:textColor="@color/textColorGray"
            android:textSize="@dimen/tinyTextSize" />
    </RelativeLayout>
</com.andexert.library.RippleView>